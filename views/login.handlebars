<div class="page-container">
    <div class="page-header">
        <h1>Welcome Back!</h1>
        <p>Sign in to your company to access your dashboard</p>
    </div>

    {{#if error}}
    <div class="error-banner">
        {{error}}
    </div>
    {{/if}}

    <form id="loginForm" action="/dashboard" method="POST">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required
                pattern="^[a-z0-9_]{5,30}$"
                title="Username must be 5-30 characters long and contain only lowercase letters, numbers, and underscores">
            <div class="error-message" id="usernameError"></div>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required
                pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*])[A-Za-z0-9!@#$%^&*]{8,30}$"
                title="Password must be 8-30 characters long and contain at least 1 capital letter, 1 number, and 1 special character (!@#$%^&*)">
            <div class="error-message" id="passwordError"></div>
        </div>

        <button type="submit" class="btn">Sign In</button>
    </form>

    <div class="page-footer">
        <p>Don't have an account? <a href="/signup">Register your company</a></p>
        <div class="footer-logo">
            <img src="/images/Go-removebg-preview.png" alt="goProject Logo">
        </div>
    </div>
</div>
<script src="/js/form_validation.js"></script> 