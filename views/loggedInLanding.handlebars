<script>
  // Fetch and display reports directly below the form
  document.getElementById('viewReportsForm').addEventListener('submit', async e => {
    e.preventDefault();
    const projectId = document.getElementById('VRpid').value.trim();
    const form = document.getElementById('viewReportsForm');

    // Remove any previous results
    const prevResults = form.nextElementSibling;
    if (prevResults && prevResults.classList.contains('reports-list')) {
      prevResults.remove();
    }

    // Placeholder while loading
    const loadingDiv = document.createElement('div');
    loadingDiv.textContent = 'Loading';
    loadingDiv.classList.add('reports-list');
    loadingDiv.style.padding = '20px';
    form.insertAdjacentElement('afterend', loadingDiv);

    try {
      const res = await fetch(`/projects/${projectId}/reports`);
      if (!res.ok) throw new Error('Failed to fetch reports');
      const reports = await res.json();

      loadingDiv.innerHTML = '';
      if (!reports.length) {
        loadingDiv.innerHTML = '<p>No reports found for this project.</p>';
        return;
      }

      // Render each report card
      reports.forEach(r => {
        const card = document.createElement('div');
        card.classList.add('report-card');
        card.setAttribute('data-report-id', r._id);
        card.style.cssText = 'border:1px solid #ccc; padding:15px; margin-bottom:10px; position:relative;';
        card.innerHTML = `
          <h4>${r.title}</h4>
          <p>${r.description}</p>
          <p><strong>Tags:</strong> ${r.tags.join(', ')}</p>
          <p>File URL: ${r.fileURL}</p>          
          <button class="edit-report-btn" style="position:absolute; top:15px; right:15px;">Edit</button>
        `;
        loadingDiv.appendChild(card);
      });

      // Attach edit handlers
      loadingDiv.querySelectorAll('.edit-report-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const card = btn.closest('.report-card');
          const reportId = card.getAttribute('data-report-id');
          const report = reports.find(r => r._id === reportId);
          showUpdateForm(card, projectId, report);
        });
      });

    } catch (err) {
      loadingDiv.innerHTML = `<p style="color:red;">${err.message}</p>`;
    }
  });

  // Inline update form function
  function showUpdateForm(card, projectId, report) {
    if (card.querySelector('form.update-report-form')) return;

    const formHtml = `
      <form class="update-report-form" style="margin-top:15px;">
        <div class="form-group">
          <label>Title</label>
          <input type="text" name="URtitle" value="${report.title}" required>
        </div>
        <div class="form-group">
          <label>Description</label>
          <textarea name="URdesc" required>${report.description}</textarea>
        </div>
        <div class="form-group">
          <label>Tags (comma-separated)</label>
          <input type="text" name="URtags" value="${report.tags.join(', ')}">
        </div>
        <div class="form-group">
          <label>File URL</label>
          <input type="url" name="URfileURL" value="${report.fileURL || ''}">
        </div>
        <button type="submit" class="btn" style="width:100%; margin-top:10px;">Save Changes</button>
        <button type="button" class="btn cancel-update-btn" style="width:100%; margin-top:5px; background:#eee; color:#333;">Cancel</button>
      </form>
    `;
    card.insertAdjacentHTML('beforeend', formHtml);

    const form = card.querySelector('form.update-report-form');
    form.querySelector('.cancel-update-btn').addEventListener('click', () => form.remove());

    form.addEventListener('submit', async e => {
      e.preventDefault();
      const data = {
        title: form.URtitle.value.trim(),
        description: form.URdesc.value.trim(),
        tags: form.URtags.value.trim().split(',').map(t => t.trim()).filter(t => t),
        fileURL: form.URfileURL.value.trim() || undefined
      };

      try {
        const res = await fetch(
          `/projects/${projectId}/reports/${report._id}`,
          { method: 'PUT', headers: {'Content-Type': 'application/json'}, body: JSON.stringify(data) }
        );
        if (!res.ok) {
          const err = await res.json();
          throw new Error(err.message || 'Failed to update report');
        }
        alert('Report updated successfully');
        form.remove();
        card.querySelector('h4').textContent = data.title;
        card.querySelector('p').textContent = data.description;
      } catch (err) {
        alert(err.message);
      }
    });
  }
